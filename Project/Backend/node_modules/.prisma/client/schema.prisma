generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  memberId    Int      @unique
  prefixTH    String
  fNameTH     String
  lNameTH     String
  prefixEN    String?
  fNameEN     String?
  lNameEN     String?
  tel         String
  address     String
  sex         Int
  birthDate   DateTime
  startMember DateTime
  expMember   DateTime
  password    String
  role        String   @default("User") // "User" or "Admin"
  borrows     Borrow[]
}

model Book {
  id      Int      @id @default(autoincrement())
  title   String
  author  String
  isbn    String   @unique
  copies  Int
  borrows Borrow[]
}

model Borrow {
  id         Int       @id @default(autoincrement())
  userId     Int
  bookId     Int
  borrowDate DateTime  @default(now())
  returnDate DateTime?
  fine       Float? // ค่าปรับถ้าเกินกำหนด
  user       User      @relation(fields: [userId], references: [id])
  book       Book      @relation(fields: [bookId], references: [id])
}
